{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/spa",
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index" },
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}
